<%= form_for @invite do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :inviter_name %><br />
    <%= f.text_field :inviter_name %>
  </p>
  <p>
    <%= f.label :inviter_email %><br />
    <%= f.text_field :inviter_email %>
  </p>
  <p>
    <%= f.label :invitees %><br />
    <%= f.text_area :invitees %>
  </p>
  <p><%= f.submit %></p>
<% end %>
