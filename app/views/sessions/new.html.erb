<div style="width:300px;padding:10px;margin:10px auto;border:2px solid #000;">
<h3>Log in</h3>  
  
<%= form_tag sessions_path do %>  
  <p>  
    <%= label_tag :email %><br/>
    <%= text_field_tag :email, params[:email], :size => 30 %>  
  </p>  
  <p>  
    <%= label_tag :password %><br/>
    <%= password_field_tag :password, '', :size => 30 %>  
  </p>  
  <p class="button"><%= submit_tag "Login" %></p>  
<% end %>  
</div>
