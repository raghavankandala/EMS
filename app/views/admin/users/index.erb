<%= will_paginate(@users) %>
<table>
  <tr>
    <th>Email</th>
    <th>Role</th>
    <th></th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.roles.map(&:name).to_sentence %></td>
      <td><%= link_to "Edit", edit_admin_user_path(user) %></td>
      <td><%= link_to "Destroy", [:admin, user], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate(@users) %>

<p><%= link_to "New User", new_admin_user_path %></p>
