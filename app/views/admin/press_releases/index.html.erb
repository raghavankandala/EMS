<h2> Press releases (Internal and External)</h2>
<%= will_paginate(@press_releases) %>
<ul class="pretty-listing" style="margin-left:5px;padding-left:15px;border-top:1px solid #000;border-bottom:1px solid #000;">
<% @press_releases.each do |pr| %>
     <li style="padding-bottom:10px;border-bottom:1px dotted #EC1F26;">
        <% if pr.external? %>
          <A target='_blank' href="<%= pr.url %>"><%= pr.title %></A> 
          <br/>-- <%= pr.pr_date.strftime("%A, %d %b %Y") %> (<%= pr.source %>)
        <% else %>
          <%= link_to pr.title, pr %>
          <br/>-- <%= pr.pr_date.strftime("%A, %d %b %Y") %>
          <% end %>
          <div class="links">
            <%= link_to 'edit', edit_admin_press_release_path(pr)%> | <%= link_to 'Delete', pr, :method => 'DELETE', :confirm => 'Are you sure?'%>
          </div>
      </li>
<% end %>
</ul>
<%= will_paginate(@press_releases) %>
<p><%= link_to "New Press Release", new_admin_press_release_path %></p>
